@using System.Web.Optimization

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Episerver 9</title>


    @Styles.Render("~/Content/Site.css")


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapse" data-toggle="collapse"
                        data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Episerver 9</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
            </div>
        </div>
    </div>


    @RenderBody()

    <div class="container">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Episerver 9</p>
        </footer>
    </div>

    @Styles.Render("~/bundles/jquery.js");
    @Styles.Render("~/bundles/bootstrap.js");
</body>
</html>
